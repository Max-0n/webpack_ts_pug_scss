{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "ban-ts-ignore": true,
      "no-empty-interface": true,
      "no-for-in": true,
      "no-var-requires": false,
      "curly": true,
      "function-constructor": true,
      "no-async-without-await": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-console": [true, "log", "error"],
      "no-duplicate-super": true,
      "no-duplicate-switch-case": true,
      "no-duplicate-variable": true,
      "no-dynamic-delete": true,
      "no-eval": true,
      "no-return-await": true,
      "prefer-object-spread": true,
      "switch-default": true,
      "no-duplicate-imports": [true, {"allow-namespace-imports": true}],
      "prefer-const": true,
      "arrow-return-shorthand": true,
      "binary-expression-operand-order": true,
      "comment-format": [true, "check-space", "allow-trailing-lowercase"],
      "comment-type": [true, "singleline"],
      "encoding": true,
      "increment-decrement": [true, "allow-post"],
      "file-name-casing": [true, "camel-case"],
      "newline-per-chained-call": true,
      "no-unnecessary-callback-wrapper": true,
      "object-literal-key-quotes": [true, "as-needed"],
      "one-variable-per-declaration": true,
      "prefer-method-signature": true,
      "prefer-while": true,
      "space-within-parens": true,
      "switch-final-break": true,
      "unnecessary-else": true,
      "variable-name": true,
      "align": true,
      "import-spacing": true,
      "indent": [true, "spaces", 2],
      "linebreak-style": [true, "CRLF"],
      "new-parens": true,
      "no-consecutive-blank-lines": [true, 2],
      "quotemark": [true, "single"],
      "semicolon": [true, "always"],
      "trailing-comma": [true],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type",
        "check-typecast",
        "check-preblock",
        "check-postbrace"
      ]
    },
    "rulesDirectory": []
}
